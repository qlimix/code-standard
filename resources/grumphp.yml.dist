grumphp:
  stop_on_failure: false
  ignore_unstaged_changes: false
  ascii: ~
  tasks:
    phpcs:
    phpmd:
      ruleset: ['vendor/qlimix/code-standard/src/MessDetection/ruleset.xml']
    phpstan:
      level: 7
      ignore_patterns:
        - "spec"
        - "tests"
        - "app"
        - "config"
        - "public"
        - "bin"
        - "docs"
