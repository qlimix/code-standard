{
    "name": "qlimix/code-standard",
    "type": "composer-plugin",
    "description": "Qlimix code standard",
    "license": "MIT",
    "keywords": [
        "qlimix",
        "code",
        "standard"
    ],
    "authors": [
        {
            "name": "frank",
            "email": "frank@qlimix.net"
        }
    ],
    "require": {
        "php": ">=7.4",
        "composer-plugin-api": "^1.1",
        "php-coveralls/php-coveralls": "^2.2",
        "phpmd/phpmd": "^2.8",
        "phpro/grumphp": "^0.17",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^8.5",
        "qlimix/codesniffer-standard": "^2.0"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Qlimix\\CodeStandard\\": "src/"
        }
    },
    "extra": {
        "class": "Qlimix\\CodeStandard\\Composer\\CodeStandardPluginInstaller"
    },
    "require-dev": {
        "vimeo/psalm": "^3.8"
    }
}
