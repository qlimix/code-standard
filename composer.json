{
    "name": "qlimix/code-standard",
    "type": "library",
    "description": "Qlimix code standard",
    "license": "MIT",
    "keywords": [
        "qlimix",
        "code",
        "standard"
    ],
    "authors": [
        {
            "name": "frank",
            "email": "frank@qlimix.net"
        }
    ],
    "require": {
        "php": ">7.4",
        "php-coveralls/php-coveralls": "^2.4",
        "phpmd/phpmd": "^2.8",
        "phpro/grumphp": "^1.0",
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^9.4",
        "qlimix/codesniffer-standard": "^3.0",
        "vimeo/psalm": "^4.0"
    },
    "config": {
        "sort-packages": true
    },
    "bin": ["bin/q-codestandard-defaults.php"],
    "autoload": {
        "psr-4": {
            "Qlimix\\CodeStandard\\": "src/"
        }
    }
}
